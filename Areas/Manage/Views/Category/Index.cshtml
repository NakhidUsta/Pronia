
@model IEnumerable<Category>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Category Table</h4>
                  <a class="btn btn-success " asp-action="create" asp-controller="category">Create</a>
                
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                            No
                          </th>
                          <th>
                            Name
                          </th>
                          <th>
                            Product Count
                          </th>
                          <th>
                            Settings
                          </th>
                   
                        </tr>
                      </thead>
                      <tbody>
                        @foreach(Category category in Model)
                        {
                            count++;
                            <tr>
                                <td >
                                   @count
                                </td>
                                <td>
                                   @category.Name
                                </td>
                                <td>
                                    @category.Products.Count
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-controller="category" asp-action="update" asp-route-id="@category.Id">
                                        <i class="mdi mdi-lead-pencil"></i>
                                    </a>
                                    <a class="btn btn-danger" asp-controller="category" asp-action="delete" asp-route-id="@category.Id">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                    <a class="btn btn-primary" asp-controller="category" asp-action="detail" asp-route-id="@category.Id">
                                        <i class="mdi mdi-logout-variant"></i>
                                    </a>
                                </td>
                               
                            </tr>
                        }

                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>