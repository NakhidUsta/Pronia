
@model CategoryIndexVm
@{
    int count = (Model.CurrentPage-1)*5;
}
<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Category Table</h4>
                  <a class="btn btn-success " asp-action="create" asp-controller="category">Create</a>
                
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                            No
                          </th>
                          <th>
                            Name
                          </th>
                          <th>
                            Product Count
                          </th>
                          <th>
                            Settings
                          </th>
                   
                        </tr>
                      </thead>
                      <tbody>
                        @foreach(Category category in Model.Categories)
                        {
                            count++;
                            <tr>
                                <td >
                                   @count
                                </td>
                                <td>
                                   @category.Name
                                </td>
                                <td>
                                    @category.Products.Count
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-controller="category" asp-action="update" asp-route-id="@category.Id">
                                        <i class="mdi mdi-lead-pencil"></i>
                                    </a>
                                    <a class="btn btn-danger" asp-controller="category" asp-action="delete" asp-route-id="@category.Id">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                    <a class="btn btn-primary" asp-controller="category" asp-action="detail" asp-route-id="@category.Id">
                                        <i class="mdi mdi-logout-variant"></i>
                                    </a>
                                </td>
                               
                            </tr>
                        }

                      </tbody>
                    </table>
                <nav style="margin-top:10px ;display:flex; justify-content:center " aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPage; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@i">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPage ? "disabled" : "")">
                            <a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                        </li>
                    </ul>

                </nav>
                  </div>
                </div>
              </div>
            </div>