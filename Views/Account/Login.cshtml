@using Pronia.Models.ViewModels;
@model LoginVM
<main class="d-flex" style="justify-content:center; margin-top:10px;">
    <div class="col-lg-6">
        <form method="post">
            <div class="login-form">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <h4 class="login-title">Login</h4>
                <div class="row">
                    <div class="col-lg-12">
                        <label asp-for="UserOrEmail">Email Address or Username</label>
                        <input asp-for="UserOrEmail" placeholder="UserOrEmail" />
                    </div>
                    <div class="col-lg-12">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" placeholder="Password" />
                    </div>
                    <div class="col-md-8">
                        <div class="check-box">
                            <input asp-for="RememberMe"  />
                            <label asp-for="RememberMe" >Remember me</label>
                        </div>
                    </div>
                    
                    <div class="col-lg-12 pt-5">
                        <button class="btn btn-custom-size lg-size btn-pronia-primary">
                            Login
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>